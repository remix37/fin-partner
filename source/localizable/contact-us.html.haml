---
title : Fin Partners - Global leader in SAP executive search and Talent Advisory
---

:javascript
  window.onload = (function(){
    if(window.location.hash == '#thank-you'){
      document.getElementById('thank-you-message').className = 'alert alert-success';
    }
  })

.contact-us
  .container.banner.marge-delete
    .row
      .col-md-4.col-md-offset-4.white

        .big-title.contact.text-center
          %h2
            - t("menu").drop(2).first(1).each do |nav|
              = nav

.container.bg-white.marge-delete
  .row.block.pb-0
    .col-md-12
      #thank-you-message.hidden{:role => "alert"}
        Thank you for contacting us we'll get back to you, as soon as we can.
  %form.row.block{:action => "https://getsimpleform.com/messages?form_api_token=461f7854117b75a3f540ef9a88b513e2", :method => "post", :enctype => "multipart/form-data"}

    - if lang == :en
      %input{:name => "redirect_to", :type => "hidden", :value => "https://fin-partners.netlify.com/contact-us/#thank-you"}/
    - else
      %input{:name => "redirect_to", :type => "hidden", :value => "https://fin-partners.netlify.com/#{I18n.locale}/contact-us/#thank-you"}/

    %input{:name => "_folder", :type => "hidden", :value => "quotes"}/
    %input{:name => "_spam", :type => "hidden", :value => "message"}/

    .col-md-6

      .form-group
        %label{:for => "Profil"}
        %select.form-control#Profil{:name => "profil", :required => "", "data-validation" => "required"}
          %option{:disabled => "", :selected => "selected", :value => ""} Do you are a candidate or compagny ?
          %option{:value => "Candidate"} Candidate
          %option{:value => "Compagny"} Compagny

      .row
        .col-xs-6
          .form-group
            %input.form-control{:name => "name", :placeholder => "First name", :type => "text", :required => "", "data-validation" => "required"}/

        .col-xs-6
          .form-group
            %input.form-control{:name => "last name", :placeholder => "Last name", :type => "text", :required => "", "data-validation" => "required"}/

      .clearfix

      .row
        .col-xs-6
          .form-group
            %input#country.form-control{:name => "country", :placeholder => "Country", :type => "text", :required => "", "data-validation" => "required"}/

        .col-xs-6
          .form-group
            %input.form-control{:name => "mail", :placeholder => "Email", :type => "email", :required => "", "data-validation" => "email"}/

      .form-group
        %input.form-control{:name => "compagny", :placeholder => "Compagny", :type => "text", :required => "", "data-validation" => "required"}/

      .form-group
        %textarea.form-control{:name => "message", :placeholder => "Tell us how we can help you", :rows => "3"}

    .col-md-6

      .form-group
        %label{:for => ""} What subject are you interested in?

        .checkbox
          %label
            %input{:value => "Executive Search", "data-validation" => "checkbox_group", "data-validation-qty" => "min1", :name => "subject[]", :type => "checkbox"}/
            Executive Search

        .checkbox
          %label
            %input{:value => "Interim Consulting", "data-validation" => "checkbox_group", "data-validation-qty" => "min1", :name => "subject[]", :type => "checkbox"}/
            Interim Consulting

        .checkbox
          %label
            %input{:value => "SAP Market Insight", "data-validation" => "checkbox_group", "data-validation-qty" => "min1", :name => "subject[]", :type => "checkbox"}/
            SAP Market Insight

        .checkbox
          %label
            %input{:value => "Talent Advisory", "data-validation" => "checkbox_group", "data-validation-qty" => "min1", :name => "subject[]", :type => "checkbox"}/
            Talent Advisory

      .form-group
        %label Join your CV/resume
        %input{:name => "cv", :type => "file", :required => "", "data-validation" => "mime size", "data-validation-allowing" => "pdf", "data-validation-max-size" => "2M"}/

      %button.btn.btn-primary{:type => "Submit"} Submit

%script{:src => "//cdnjs.cloudflare.com/ajax/libs/jquery-form-validator/2.3.26/jquery.form-validator.min.js"}
= partial "partials/form-validation.html.haml"
