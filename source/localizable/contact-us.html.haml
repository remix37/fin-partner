---
title : Fin Partners - Global leader in SAP executive search and Talent Advisory
---

:javascript
  window.onload = (function(){
    if(window.location.hash == '#thank-you'){
      document.getElementById('thank-you-message').className = 'alert alert-success';
    }
  })

.contact-us
  .container.banner.marge-delete
    .row
      .col-md-4.col-md-offset-4.white

        .big-title.contact.text-center
          %h2
            - t("menu").drop(2).first(1).each do |nav|
              = nav

.container.bg-white.marge-delete
  .row.block.pb-0
    .col-md-12
      #thank-you-message.hidden{:role => "alert"}
        Thank you for contacting us we'll get back to you, as soon as we can.
  %form.row.block{:action => "https://getsimpleform.com/messages?form_api_token=11762de83d1daea1f2d88c9786cfb63d", :method => "post", :enctype => "multipart/form-data"}

    - if lang == :en
      %input{:name => "redirect_to", :type => "hidden", :value => "https://fin-partners.netlify.com/contact-us/#thank-you"}/
    - else
      %input{:name => "redirect_to", :type => "hidden", :value => "https://fin-partners.netlify.com/#{I18n.locale}/contact-us/#thank-you"}/

    %input{:name => "_folder", :type => "hidden", :value => "quotes"}/
    %input{:name => "_spam", :type => "hidden", :value => "message"}/

    .col-md-6

      .form-group
        %label{:for => "Profil"}
        %select.form-control#Profil{:name => "profil", :required => "", "data-validation" => "required"}
          %option{:disabled => "", :selected => "selected", :value => ""}= t("contact-us.question")

          - t("contact-us.answers").each do |answer|
            %option{:value => "#{answer}"}=answer

      .row
        .col-xs-6
          .form-group
            %input.form-control{:name => "#{t("contact-us.name")}", :placeholder => "#{t("contact-us.name")}", :type => "text", :required => "", "data-validation" => "required"}/

        .col-xs-6
          .form-group
            %input.form-control{:name => "#{t("contact-us.last-name")}", :placeholder => "#{t("contact-us.last-name")}", :type => "text", :required => "", "data-validation" => "required"}/

      .clearfix

      .row
        .col-xs-6
          .form-group
            %input#country.form-control{:name => "#{t("contact-us.country")}", :placeholder => "#{t("contact-us.country")}", :type => "text", :required => "", "data-validation" => "required"}/

        .col-xs-6
          .form-group
            %input.form-control{:name => "#{t("contact-us.mail")}", :placeholder => "#{t("contact-us.mail")}", :type => "email", :required => "", "data-validation" => "email"}/

      .form-group
        %input.form-control{:name => "#{t("contact-us.company")}", :placeholder => "#{t("contact-us.company")}", :type => "text", :required => ""}/

      .form-group
        %textarea.form-control{:name => "#{t("contact-us.message")}", :placeholder => "#{t("contact-us.message")}", :rows => "3"}

    .col-md-6

      .form-group
        %label{:for => ""}= t("contact-us.subject")

        - t("contact-us.subject-list").each do |subject|
          .checkbox
            %label
              %input{:value => "#{subject}", "data-validation" => "checkbox_group", "data-validation-qty" => "min1", :name => "subject[]", :type => "checkbox"}
              = subject

      .form-group
        %label{:for => ""}= t("contact-us.resume")
        %input{:name => "cv", :type => "file", "data-validation" => "mime size", "data-validation-allowing" => "pdf, doc, docx", "data-validation-max-size" => "2M"}/

      %button.btn.btn-primary{:type => "#{t("contact-us.submit")}"}= t("contact-us.submit")

%script{:src => "//cdnjs.cloudflare.com/ajax/libs/jquery-form-validator/2.3.26/jquery.form-validator.min.js"}
= partial "partials/form-validation.html.haml"
