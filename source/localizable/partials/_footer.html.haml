.container.footer.marge-delete
  .row
    .col-md-10.col-md-offset-1
      .row.white.block
        .col-md-3.col-sm-6
          %h4 About us
          %ul.list-unstyled
            - if lang == :en

              %li
                = link_to "/about-us.html" do
                  - t("menu").drop(0).first(1).each do |nav|
                    = nav

              %li
                = link_to "/what-we-do.html" do
                  - t("menu").drop(1).first(1).each do |nav|
                    = nav

              %li
                = link_to "/contact-us.html" do
                  - t("menu").drop(2).first(1).each do |nav|
                    = nav

            - else

              %li
                = link_to "/#{I18n.locale}/about-us.html" do
                  - t("menu").drop(0).first(1).each do |nav|
                    = nav

              %li
                = link_to "/#{I18n.locale}/what-we-do.html" do
                  - t("menu").drop(1).first(1).each do |nav|
                    = nav

              %li
                = link_to "/#{I18n.locale}/contact-us.html" do
                  - t("menu").drop(2).first(1).each do |nav|
                    = nav

        .col-md-3.col-sm-6
          %h4 Contact
          %ul.list-unstyled
            %li
              %span.fa.fp-mail-alt
              &nbsp;: contact@fin-partners.co

        .col-md-3.col-sm-6
          %h4 Legal mentions
          %ul.list-unstyled
            %li
              %a{:href => "/legal-mentions"} Privacy Policy
            %li
              %a{:href => "/legal-mentions#Company"} Company

        .col-md-3.col-sm-6
          %h4 Follow us
          %ul.list-inline
            %li
              %span.fp-linkedin

